#include <stdio.h>

int main() {
    
    int N, i, sum = 0 ;
    
    if( scanf( "%d", &N ) != 1 ) {
        return 1 ;
    }//end if

    for( i = 0 ; i <= N ; i++ ) {
        sum = sum + i ;
    }//end for

    for( i = 0 ; i <= N ; i++ ){
        printf( "%d ", i ) ;
    }//end for

    printf( "\n%d", sum ) ;

    return 0 ;
}//end function
