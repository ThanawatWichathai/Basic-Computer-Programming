#include <stdio.h>

int main() {

    int termCode = 0 ;
    float investmentAmout = 0.0 ;
    float aprRate = 0.0 ;
    float totalInterest = 0.0 ;

    if( scanf( "%d %f", &termCode, &investmentAmout ) != 2 ) {
        return 1 ;
    }//end if

    switch( termCode ) {
        case 1:
            if( investmentAmout < 5000 ) {
                aprRate = 0.03 ;
            }else if( investmentAmout >= 5000 ) {
                aprRate = 0.04 ;
            }//end if
            break ;

        case 2:
            if( investmentAmout < 10000 ) {
                aprRate = 0.05 ;
            }else if( investmentAmout >= 10000 ) {
                aprRate = 0.065 ;
            }//end if
            break ;

        case 3:
            aprRate = 0.08 ;
            break ;

        default :
            printf( "Invalid Term Code" ) ;
    }//end switch

    if( termCode >= 1 && termCode <= 3 ) {
        totalInterest = investmentAmout * aprRate ;
        printf( "%.2f\n", totalInterest ) ;
    }//end if

    return 0 ;
}//end function
