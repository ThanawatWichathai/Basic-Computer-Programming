#include <stdio.h>

int main() {
    
    int N, i, quantity = 0 ;
    float unitPrice, itemCost, grandTotal = 0.0 ;

    if( scanf( "%d", &N ) != 1 ) {
        return 0 ;
    }//end if

    for( i = 0 ; i < N ; i++ ) {
        scanf( "%f", &unitPrice ) ;
        scanf( "%d", &quantity ) ;
        itemCost = unitPrice * quantity ;
        if( unitPrice >= 1000.00 ) {
            grandTotal = grandTotal + ( itemCost - quantity *(unitPrice * 0.1) ) ;
        }else {
            grandTotal = grandTotal + itemCost ;
        }//end if
    }//end for
    
    printf( "Grand Total: %.2f\n", grandTotal ) ;

    return 0 ;
}//end function
