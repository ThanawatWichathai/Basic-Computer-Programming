#include <stdio.h>

int main() {

    int number = 0 ;

    do {
        printf( "\nEnter a number (1-10): " ) ;
        if( scanf( "%d", &number ) != 1 ) {
            break ;
        }//end if

        if( number < 1 || number > 10  ) {
            printf( "Error: Value must be 1-10." ) ;
        }else {
            printf( "Input accepted:[%d]", number ) ;
        }//end if

    }while( number < 1 || number > 10 ) ;

    return 0 ;
}//end function
